{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    },
    "rules": {
        "camelcase": "off",
        "semi": [
            2,
            "always"
        ],
        "space-in-brackets": [
            "error",
            "always"
        ],
        "no-console": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "jsx": "never",
                "ts": "never",
                "tsx": "never"
            }
        ],
        "import/no-unresolved": [
            2,
            {
                "caseSensitive": false,
                "commonjs": true,
                "amd": true
            }
        ],
        "class-methods-use-this": "off",
        "import/prefer-default-export": "off",
        "linebreak-style": "off",
        "no-underscore-dangle": [
            "error",
            {
                "allow": [
                    "_id",
                    "_doc",
                    "_update"
                ]
            }
        ]
    }
}